<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macro to attach fingertip_frame to the robot -->
  <xacro:macro name="fingertip_extension" params="parent">
    <link name="fingertip_frame"/>
    <joint name="fingertip_fixed_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="fingertip_frame"/>
      <origin xyz="0.21 0 0" rpy="0 0 0"/>
    </joint>
  </xacro:macro>

</robot>
